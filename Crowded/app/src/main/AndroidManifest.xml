<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team11.crowded">

    <application
        android:allowBackup="true"
        android:icon="@drawable/krowdedicon"
        android:label="Krowded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view_locations" />
        <activity android:name=".view_page" />
        <activity android:name=".add_comment" />
        <activity
            android:name=".splashScreen"
            android:label="splashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            >
        </activity>

        <activity android:name=".login_screen"/>

    </application>

</manifest>
